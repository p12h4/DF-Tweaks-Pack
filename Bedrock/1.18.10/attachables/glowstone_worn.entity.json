{
  "format_version": "1.16.0",
  "minecraft:attachable": {
    "description": {
      "identifier": "Tweaks:glowstone_worn.entity",
      "item": {
        "minecraft:glowstone": "query.is_owner_identifier_any('minecraft:armor_stand','minecraft:drowned','minecraft:husk','minecraft:piglin','minecraft:piglin_brute','minecraft:player','minecraft:skeleton','minecraft:stray','minecraft:wither_skeleton','minecraft:zombie','minecraft:zombie_pigman') == 1.0"
      },
      "materials": {
        "default": "armor",
        "enchanted": "armor_enchanted"
      },
      "textures": {
        "default": "textures/blocks/glowstone",
        "enchanted": "textures/misc/enchanted_item_glint"
      },
      "geometry": {
        "default": "geometry.block_worn"
      },
      "scripts": {
        "parent_setup": "variable.helmet_layer_visible = 0.0;"
      },
      "render_controllers": [
        {
          "controller.render.block_worn.disabled": "c.is_first_person || !query.is_item_name_any('slot.armor.head', 'minecraft:glowstone')"
        },
        {
          "controller.render.block_worn.enabled": "!c.is_first_person && query.is_item_name_any('slot.armor.head', 'minecraft:glowstone')"
        }
      ]
    }
  }
}