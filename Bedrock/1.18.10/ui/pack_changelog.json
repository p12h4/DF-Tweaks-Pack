{
  "namespace": "pack_changelog",

   /*
   ==============================
        Screen
   ==============================
  */
  "changelog_panel@common_dialogs.main_panel_no_buttons": {
    "size": ["80%", "80%"],
    "$text_name": "Changelog",
    "$child_control": "pack_changelog.scrolling_panel"
  },
  "scrolling_panel@common.scrolling_panel": {
    "$show_background": false,
    "$scrolling_content": "pack_changelog.panel_content"
  },

  /*
   ==============================
        Screen Content
   ==============================
  */
  "panel_content": {
    "type": "stack_panel",
    "orientation": "horizontal",
    "size": ["100%", 256],
    "offset": [4, 4],
    "controls": [
      {
        "content": {
          "type": "stack_panel",
          "size": ["fill", "100%"],
          "controls": [
            {
              "current_version": {
                "type": "label",
                "font_scale_factor": 0.8,
                "color": [0.4, 0.4, 0.4],
                "text": "$pack_version"
              }
            },
            {
              "current_changelog": {
                "type": "label",
                "font_scale_factor": 0.7,
                "text": "- added a red outline to all element blocks that previously did not have one\n- added translation strings for goat horn sound 8 and 9\n- added translation strings for mangrove, bamboo and cherry sign tiles\n- changed the item renaming character limit to the 32-bit integer limit\n- internal changes\n- made pumpkins visible on witches"
              }
            },
            {
              "previous_version_1_1": {
                "type": "label",
                "font_scale_factor": 0.9,
                "text": "\nPrevious Version"
              }
            },
            {
              "previous_version_1_2": {
                "type": "label",
                "font_scale_factor": 0.8,
                "color": [0.4, 0.4, 0.4],
                "text": "\nPack Version: 4.2.4"
              }
            },
            {
              "previous_changelog": {
                "type": "label",
                "font_scale_factor": 0.7,
                "text": "- added a distinguishable water color to deep warm oceans\n- added unique water colors to the remaining Nether biomes that use the default water color\n- resolved an issue where the pack notification was appearing below the title image"
              }
            }
          ]
        }
      }
    ]
  }


}