{
  "namespace": "update_news",

   /*
   ==============================
        Screen
   ==============================
  */
  "news_panel@common_dialogs.main_panel_no_buttons": {
    "size": ["80%", "80%"],
    "$text_name": "Changelog",
    "$child_control": "update_news.news_scrolling_panel"
  },
  "news_scrolling_panel@common.scrolling_panel": {
    "$show_background": false,
    "$scrolling_content": "update_news.news_panel_content"
  },

  /*
   ==============================
        Screen Content
   ==============================
  */
  "news_panel_content": {
    "type": "stack_panel",
    "orientation": "horizontal",
    "size": ["100%", 256],
    "offset": [4, 4],
    "controls": [
      {
        "content": {
          "type": "stack_panel",
          "size": ["fill", "100%"],
          "controls": [
            {
              "current_version": {
                "type": "label",
                "font_scale_factor": 0.8,
                "color": [0.4, 0.4, 0.4],
                "text": "$pack_version"
              }
            },
            {
              "current_changelog": {
                "type": "label",
                "font_scale_factor": 0.7,
                "text": "- added a distinguishable water color to deep warm oceans\n- added unique water colors to the remaining Nether biomes that previously had the same color as the default color\n- resolved an issue where the pack notification was appearing below the title image"
              }
            },
            {
              "previous_version_1_1": {
                "type": "label",
                "font_scale_factor": 0.9,
                "text": "\nPrevious Version"
              }
            },
            {
              "previous_version_1_2": {
                "type": "label",
                "font_scale_factor": 0.8,
                "color": [0.4, 0.4, 0.4],
                "text": "\nPack Version: 4.2.3"
              }
            },
            {
              "previous_changelog": {
                "type": "label",
                "font_scale_factor": 0.7,
                "text": "- added a distinguishable texture to tamed ocelots\n- added glowstone visibility to witches"
              }
            }
          ]
        }
      }
    ]
  }


}